--TEST--
bcfloor() function
--EXTENSIONS--
bcmath
--FILE--
<?php
$nums = [
    '0',
    '0.00',
    '-0',
    '-0.00',
    '0.01',
    '0.000000000000000000000000000000000000000001',
    '-0.01',
    '-0.000000000000000000000000000000000000000001',
    '1',
    '1.0000',
    '1.0001',
    '100000.000000000000000000000000000000000000000001',
    '-1',
    '-1.0000',
    '-1.0001',
    '-100000.000000000000000000000000000000000000000001',
];

foreach ($nums as $num) {
    echo $num."\n";
    echo '=> '.bcfloor($num)."\n\n";
}

echo "========== value error ==========\n";
try {
    bcfloor('hoge');
} catch (Throwable $e) {
    echo $e->getMessage()."\n";
}

try {
    bcfloor('0.00.1');
} catch (Throwable $e) {
    echo $e->getMessage()."\n";
}
?>
