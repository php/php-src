--EXTENSIONS--
dom
--FILE--
<?php

// UTF-8 -> UTF-8
// Create a UTF-8 string where a UTF-8 byte sequence falls over the boundary of the 4096 byte buffer
$dom = DOM\HTMLDocument::createEmpty();
$dom->append(str_repeat("A", 4096 - 2) . "\xf0\x90\x8d\x88AA");
var_dump($dom->saveHTML());

?>
