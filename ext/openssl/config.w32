// vim:ft=javascript

ARG_WITH("openssl", "OpenSSL support", "no,shared");

if (PHP_OPENSSL != "no") {
	var ret = SETUP_OPENSSL("openssl", PHP_OPENSSL);

	if (ret >= 2) {
		EXTENSION("openssl", "openssl.c xp_ssl.c");
		AC_DEFINE("HAVE_OPENSSL_EXT", 1, "Define to 1 if PHP extension 'openssl' is available.");
	}
}
