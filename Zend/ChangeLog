      zend_compile.h
      zend_language_parser.y:    <?php
    	class MyException1 {

    	}

    	class MyException2 {

    	}

    	try {
    		throw new MyException2();
    	} catch (MyException1 $m) {
    		print "Caught MyException1";
    	} catch (MyException2 $m) {
    		print "Caught MyException2";
    	}

