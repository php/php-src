# cwd must be top_srcdir
test -f build/sysv_makefile || exit 2

test -f bsd_converted || exit 1

tmpfile=`mktemp /tmp/sysv_makefile.XXXXXX` || tmpfile="tmp.$$"
for i in build/*.mk; do
    sed 's/^\.include "\(.*\)"/include \1/' $i >$tmpfile \
        && cp $tmpfile $i
done
rm -f $tmpfile

rm bsd_converted
exit 0
