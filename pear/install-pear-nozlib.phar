// PHP executable
if (!empty($php_bin)) {
    $config->set('php_bin', $php_bin);
}

// PHP prefix
if (isset($prefix)) {
    if ($prefix != 'a') {
        if ($prefix[0] == 'a') {
            $prefix = substr($prefix, 1);
        }
        $config->set('php_prefix', $prefix, 'system');
    }
}

// PHP suffix
if (isset($suffix)) {
    if ($suffix != 'a') {
        if ($suffix[0] == 'a') {
            $suffix = substr($suffix, 1);
        }
        $config->set('php_suffix', $suffix, 'system');
