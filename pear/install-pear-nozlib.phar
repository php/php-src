    // {{{ _error()
    function _error($p_message)
    {
        $this->error_object = & $this->raiseError($p_message);
    }

    // }}}

    // {{{ _warning()
    function _warning($p_message)
    {
        $this->error_object = & $this->raiseError($p_message);
    }

