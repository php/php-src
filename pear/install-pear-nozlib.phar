            'PHPUnit'
        );
    var $php_dir;
    var $php_bin;
    var $pear_conf;
    var $validPHPBin = false;
    var $test_dir;
    var $download_dir;
    var $temp_dir;
    var $config =
        array(
            'prefix',
            'bin_dir',
            'php_dir',
